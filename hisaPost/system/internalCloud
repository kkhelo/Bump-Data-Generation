-------------------------------------------------------------------------------
Description
    Writes out values of fields interpolated to a specified cloud of points.

\*---------------------------------------------------------------------------*/

fields (p p0 rho U);

type            sets;
libs            ("libsampling.so");

interpolationScheme cellPoint;
setFormat   raw;

executeControl  writeTime;
writeControl    writeTime;

#include "include/AIP"
#include "include/AIP1"
#include "include/AIPm1"
#include "include/AIP2"
#include "include/AIPm2"

sets
{  
    AIP
    {
        type    cloud;
        axis    xyz;
        points  $AIP;
    }

    AIP1
    {
        type    cloud;
        axis    xyz;
        points  $AIP1;
    }

    AIPm1
    {
        type    cloud;
        axis    xyz;
        points  $AIPm1;
    }

    AIP2
    {
        type    cloud;
        axis    xyz;
        points  $AIP2;
    }

    AIPm2
    {
        type    cloud;
        axis    xyz;
        points  $AIPm2;
    }
};

// ************************************************************************* //
