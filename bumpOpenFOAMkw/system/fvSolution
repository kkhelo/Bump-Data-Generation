FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{   
    "rho(|Final)"
    {
        solver          diagnal;
    }
    
    p
    {
        solver          GAMG;
        smoother        GaussSeidel;
        tolerance       1e-5;
        relTol          0.01;
        nCellsInCoarsestLevel 20;
    }

    pFinal
    {
        $p
        relTol          0;
    }

    "(U|h|k|omega)"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-5;
        relTol          0.1;
    }

    "(U|h|k|omega)Final"
    {
        $U;
        relTol          0;
    }
}

PIMPLE
{
    transonic           true;
    // momentumPredictor   true;
    nNonOrthogonalCorrectors 1;
    nCorrectors          1;
    nOuterCorrectors    50;
 
    outerCorrectorResidualControl 
    {
        U
        {
            tolerance   1e-4;
            relTol      0;
        }  

        p
        {
            tolerance   1e-4;
            relTol      0;
        }

        h
        {
            tolerance   1e-5;
            relTol      0;
        }

        // "(k|omega|h)"
        // {
        //     tolerance   1e-5;
        //     relTol      0;
        // }
     }
}
 
relaxationFactors
{
    fields
    {
        p       0.3;
        pFinal  1;
    }
    equations
    {
        "(U|k|omega|h)"     0.3;
        "(U|k|omega|h)Final"   1;
    }
}

