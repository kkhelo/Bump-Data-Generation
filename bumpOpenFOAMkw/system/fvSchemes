FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         Euler;
}

gradSchemes
{
    default             none;

    gradScheme          Gauss linear;
    grad(p)             $gradScheme;
    grad(U)             $gradScheme;
    grad(T)             $gradScheme;
    grad(h)             $gradScheme;
    grad(K)             $gradScheme;
    grad(phi)           $gradScheme;
    grad((rho*rAU))     $gradScheme;
    grad(magSqr((rho_0*U_0)))   $gradScheme;
    grad(magSqr(HbyA))  $gradScheme;
    grad(rho)           $gradScheme;
    grad(thermo:psi)    $gradScheme;   

    gradSchemeCell      cellLimited Gauss linear 0.5;   
    grad(k)             $gradSchemeCell;   
    grad(omega)         $gradSchemeCell;
}

divSchemes
{
    default             none;
    div(phi,U)          Gauss limitedLinearV 1;
    div(((rho*nuEff)*dev2(T(grad(U))))) Gauss linear;
    div(phi,K)          Gauss limitedLinear 1;
    div(phi,h)          Gauss limitedLinear 1;
    div(phid,p)         Gauss limitedLinear 1;
    div(phi,omega)      Gauss linearUpwind grad(omega);
    div(phi,k)          Gauss linearUpwind grad(k);
}

laplacianSchemes
{
    default         Gauss linear corrected;
}

interpolationSchemes
{
    default         limitedLinear phi 1.0;
}

snGradSchemes
{
    default         corrected;
}

