FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      epsilon;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 -1 0 0 0 0];

internalField   uniform 159.72;
// w = 0.09^(-0.25)*k^0.5/mixingLength
// mixingLength = 0.07*1*scaleFactor
// https://www.simscale.com/docs/simulation-setup/global-settings/k-omega-sst/

boundaryField
{
    inlet
    {
        type            turbulentMixingLengthFrequencyInlet;
        mixingLength    0.042;
        value           $internalField;
    }

    outlet
    {
        type            zeroGradient;
    }

    bottom
    {
        type            zeroGradient;
    }

    top
    {
        type            symmetryPlane;
    }

    left
    {
        type            symmetryPlane;
    }
    
    right  
    {
        type            symmetryPlane;
    }

    bump
    {
        type            omegaWallFunction;
        value           $internalField;
    }

    plate
    {
        type            omegaWallFunction;
        value           $internalField;
    }
}


