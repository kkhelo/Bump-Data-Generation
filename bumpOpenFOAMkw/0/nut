FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      nut;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -1 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    inlet
    {
        type            calculated;
        value           $internalField;
    }

    outlet
    {
        type            calculated;
        value           $internalField;
    }

    bottom
    {
        type            calculated;
        value           $internalField;
    }

    top
    {
        type            symmetryPlane;
    }

    left
    {
        type            symmetryPlane;
    }

    right
    {
        type            symmetryPlane;
    }

    bump
    {
        type            nutkWallFunction;
        value           uniform 0;
    }

    plate
    {
        type            nutkWallFunction;
        value           uniform 0;
    }
}

