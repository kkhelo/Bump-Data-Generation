FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

#include "ICnBC"
internalField   uniform $Temperature;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform $Temperature;
    }

    outlet
    {
        type            inletOutlet;
        inletValue      uniform $Temperature;
        value           uniform $Temperature;       
    }

    bottom
    {
        type            zeroGradient;  
    }

    top
    {
        type            symmetryPlane; 
    }

    left
    {
        type            symmetryPlane;  
    }

    right
    {
        type            symmetryPlane;  
    }

    bump
    {
        type            zeroGradient;
    }

    plate
    {
        type            zeroGradient;
    }

  
}

