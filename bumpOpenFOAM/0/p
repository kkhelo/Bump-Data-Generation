FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -2 0 0 0 0];

#include "ICnBC"
internalField   uniform $Pressure;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform $Pressure;
    }

    outlet
    {
        type            waveTransmissive;
        field           p;
        psi             thermo:psi;
        gamma           1.4;
        fieldInf        $Pressure;
        lInf            1;
        value           uniform $Pressure;
    }

    top
    {
        type            zeroGradient;
    }

    bottom
    {
        type            zeroGradient;
    }

    left
    {
        type            zeroGradient;
    }

    right
    {
        type            zeroGradient;
    }

    bump
    {
        type            zeroGradient;
    }

    plate
    {
        type            zeroGradient;
    }
    
}

// ************************************************************************* //
