FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

#include "ICnBC"
V               ($Vx $Vy $Vz);
internalField   uniform $V ;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           $internalField;

    }

    outlet
    {
        type            inletOutlet;
        inletValue      uniform (0 0 0);
        value           uniform (0 0 0);

    }

    top
    {
        type            supersonicFreestream;
        pInf            $Pressure;
        TInf            $Temperature;
        UInf            $V;
        gamma           1.4;
        value           $internalField;
    }

    bottom
    {
        type            slip;
    }

    left
    {
        type            supersonicFreestream;
        pInf            $Pressure;
        TInf            $Temperature;
        UInf            $V;
        gamma           1.4;
        value           $internalField;
    }

    right
    {
        type            supersonicFreestream;
        pInf            $Pressure;
        TInf            $Temperature;
        UInf            $V;
        gamma           1.4;
        value           $internalField;
    }

    bump
    {
        type            noSlip;
    }

    plate
    {
        type            noSlip;
    }
}

// ************************************************************************* //
